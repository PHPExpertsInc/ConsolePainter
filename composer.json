{
    "name": "phpexperts/console-painter",
    "description": "A quick and easy library for colorizing and stylizing ANSI consoles.",
    "keywords": [
        "console colors",
        "bash colors",
        "bash formatting",
        "terminal colors"
    ],
    "homepage": "https://www.phpexperts.pro/",
    "license": "MIT",
    "authors": [
        {
            "name": "PHP Experts, Inc.",
            "homepage": "https://www.phpexperts.pro/"
        },
        {
            "name": "Theodore R. Smith",
            "homepage": "https://www.linkedin.com/in/tedrsmith"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*|8.*|9.*",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "*",
        "friendsofphp/php-cs-fixer": "*",
        "symfony/var-dumper": "*",
        "povils/phpmnd": "*",
        "squizlabs/php_codesniffer": "*",
        "phpexperts/combinatorics": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PHPExperts\\ConsolePainter\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "PHPExperts\\ConsolePainter\\Tests\\" : "tests/" }
    },
    "config": {
        "classmap-authoritative": true
    }
}
